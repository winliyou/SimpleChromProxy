{
  "manifest_version": 3,
  "name": "Chrome Proxy Switcher",
  "version": "1.0",
  "description": "一个简单的Chrome代理设置插件",
  "permissions": [
    "proxy",
    "storage",
    "system.display"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
} 